{
    "git.autofetch": true,
    "editor.lineNumbers": "relative",

    "vim.useSystemClipboard": true,
    "vim.handleKeys": {
        "<C-k>": false,
        "<C-d>": true,
        "<C-s>": false,
        "<C-z>": false
    },
    "vim.leader": "space",
    "vim.easymotion": true,
    "vim.highlightedyank.enable": true,
    "vim.normalModeKeyBindings": [
        {
            "before": ["<C-w>", "w"],
            "commands": [
                "workbench.action.closeActiveEditor",
            ],
            "silent": true
        },
        {
            "before": ["<C-w>", "<C-w>"],
            "commands": [
                "workbench.action.closeActiveEditor",
            ],
            "silent": true
        }
    ]
}
